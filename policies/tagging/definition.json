{
  "$schema": "https://schema.management.azure.com/schemas/2020-09-01/policyDefinition.json#",
  "name": "require-mandatory-tags",
  "properties": {
    "displayName": "Require mandatory tags on resources",
    "description": "Deny resource creation or update when mandatory tags are missing.",
    "mode": "Indexed",
    "metadata": {
      "category": "Tags",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable policy enforcement."
        },
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "tags['Environment']",
            "exists": "false"
          },
          {
            "field": "tags['Owner']",
            "exists": "false"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
