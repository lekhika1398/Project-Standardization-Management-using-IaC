{
  "$schema": "https://schema.management.azure.com/schemas/2020-09-01/policyDefinition.json#",
  "name": "enforce-resource-group-naming",
  "properties": {
    "displayName": "Enforce resource group naming convention",
    "description": "Deny resource groups that do not match <org>-<env>-rg-<region>.",
    "mode": "Indexed",
    "metadata": {
      "category": "Naming",
      "version": "1.0.0"
    },
    "parameters": {
      "orgPrefix": {
        "type": "String",
        "metadata": {
          "displayName": "Organization Prefix",
          "description": "Organization prefix segment."
        }
      },
      "environment": {
        "type": "String",
        "metadata": {
          "displayName": "Environment",
          "description": "Environment segment."
        }
      },
      "regionCode": {
        "type": "String",
        "metadata": {
          "displayName": "Region Code",
          "description": "Region segment."
        }
      },
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable policy enforcement."
        },
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Resources/subscriptions/resourceGroups"
          },
          {
            "field": "name",
            "notEquals": "[concat(parameters('orgPrefix'), '-', parameters('environment'), '-rg-', parameters('regionCode'))]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
